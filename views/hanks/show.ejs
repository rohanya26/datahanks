<html>

<head>
    <title></title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <style>
        body {
            margin: 0;
            padding: 0;
        }
        
        @media only screen and (max-width: 600px) {
            .i1 {
                padding-top: 5%;
                max-height: 350px;
                max-width: 100%;
            }
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Datahanks</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>

                    <% if(!currentUser){ %>
                        <li class="nav-item"><a class="nav-link " href="/login ">Login</a></li>
                        <li class="active nav-item">
                            <a class="nav-link" href="/register ">Signup</a>
                        </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link" href="# ">Currently Logged in as <%=currentUser.username %> </a>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="/logout ">Logout</a></li>
                            <% } %>



                </ul>

            </div>
        </div>
    </nav>




    <div style=" box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.3);" class="container ">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">Web_Ed</p>
                <div class="list-group">
                    <li class="list-group-item active">
                        <%= hank.name %>
                    </li>


                    <!-- <li class="list-group-item">info 3</li> -->
                </div>
            </div>
            <div class="col-md-9">
                <div class="">
                    <img style="height: 600px;width: 900px;margin: auto;" class="img-responsive i1" src="<%= hank.image %> " alt="">
                    <hr>
                    <div class="caption-full " style="display: flex;">
                        <!-- <h4 class="pull-right">popular</h4> -->

                        <form action="/hanks/<%= hank._id %>/like" method="post">
                            <div class="btn-group pull-left">
                                <% if (currentUser && hank.likes.some(function (like) {
                                    return like.equals(currentUser._id)
                                })) { %>
                                    <button class="btn btn-sm btn-primary">
                                        <i class="fas fa-thumbs-up"></i> Liked (<%= hank.likes.length %>)
                                    </button>
                                    <% } else { %>
                                        <button class="btn btn-sm btn-secondary">
                                        <i class="fas fa-thumbs-up"></i> Like (<%= hank.likes.length %>)
                                    </button>
                                        <% } %>

                            </div>
                        </form>


                        </h5>
                    </div>
                    <h4><em> <a style="text-decoration: none;" href="/users/<%= hank.author.id %> "><%=hank.author.username  %> </a> </em></h4>
                    <p style="word-wrap: break-word;">
                        <%= hank.description  %>
                    </p>
                    <hr>

                    <% if (currentUser && hank.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin ) { %>
                        <p style="display: flex;justify-content: space-between;flex-direction: row;"><a class="btn btn-primary btn-xs" href="/hanks/<%=hank._id  %>/edit"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                              </svg></a>
                            <form id="delete-form" action="/hanks/<%=hank._id  %>?_method=Delete" method="post">
                                <button class="btn btn-danger btn-xs"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                      </svg></button>
                            </form>
                        </p>
                        <% } %>

                </div>
            </div>

            <div class="pull-right">
                <button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#hankLikes">
                        <span>Total likes: <i class="fas fa-thumbs-up"></i> <%= hank.likes.length %></span>
                    </button>
            </div>

            <h3>Leave a Review</h3>

            <div class="well">
                <div class="text-right">
                    <a href="/hanks/<%= hank._id %>/comments/new" class="btn btn-success">comment</a>

                </div>
                <hr>
                <% hank.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-mid-12">
                            <strong><%= comment.author.username  %></strong>
                            <span class="pull-right"><%= comment.timeCreated.toString().substring(3,16) %> </span>
                            <p>

                                <%= comment.text %>
                            </p>
                            <% if (currentUser && comment.author.id.equals(currentUser._id)|| currentUser && currentUser.isAdmin) { %>

                                <a class="btn btn-xs btn-warning" href="/hanks/<%= hank._id  %>/comments/<%=comment._id  %>/edit  ">Edit</a>
                                <form id="delete-form" action="/hanks/<%= hank._id  %>/comments/<%=comment._id  %>?_method=DELETE" method="post">
                                    <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                </form>
                                <% } %>
                        </div>
                    </div>

                    <% }) %>

            </div>
        </div>

    </div>
    </div>
    <!-- Button trigger modal -->


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Campground Likes Modal -->
    <div id="hankLikes" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">hank likes:
                        <%= hank.likes.length %>
                    </h4>
                </div>
                <div class="modal-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Liked by:</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% hank.likes.forEach(function(like) { %>
                                <tr>
                                    <td><span class="badge"><i class="fas fa-user"></i></span>
                                        <%= like.username %>
                                    </td>
                                </tr>
                                <% }); %>
                                    <% if (hank.likes.length === 0) { %>
                                        <tr>
                                            <td><em>No likes yet.</em></td>
                                        </tr>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- <h1>
    
    </h1> -->








</body>
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js" integrity="sha384-vhJnz1OVIdLktyixHY4Uk3OHEwdQqPppqYR8+5mjsauETgLOcEynD9oPHhhz18Nw" crossorigin="anonymous"></script>
</body>

</html>





</html>