    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/"
            ><span class="glyphicon glyphicon-hdd" aria-hidden="true"></span
            >Web_Ed</a
          >
        </div>

        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if(!currentUser){ %>
            <li><a href="/login">login</a></li>
            <li><a href="/register">signup</a></li>
            <% } else { %>
            <li>
              <a href="#">Currently Logged in as <%=currentUser.username %></a>
            </li>
            <li><a href="/logout">logout</a></li>
            <% } %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <h1 class="lll" style="text-align: center">Edit <%=hank.name %></h1>
        <div style="width: 30%; margin: 25px auto">
          <form action="/hanks/<%= hank._id %>/?_method=PUT " method="post">
            <div class="form-group">
              <input
                class="form-control"
                type="text"
                name="hank[name]"
                value="<%=hank.name  %> "
              />
            </div>
            <div class="form-group">
              <input
                class="form-control"
                type="text"
                name="hank[image]"
                value="<%=hank.image %>"
              />
            </div>
            <div class="form-group">
              <input
                class="form-control"
                type="text"
                name="hank[description]"
                value="<%=hank.description  %>"
              />
            </div>

            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block">submit!</button>
            </div>
          </form>
        </div>

        <a href="/hanks ">back</a>
      </div>
    </div>
  </body>
