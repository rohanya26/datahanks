        padding-bottom: 5%;
      " class="container">
        <div class="row">
            <h1 class="" style="text-align: center">Add new Content</h1>
            <div style="width: 30%; margin: 25px auto">
                <form action="/hanks" method="post" enctype="multipart/form-data">
                    <div style="box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.3)" class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="name" />
                    </div>
                    <div style="box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.3)" class="form-group">
                        <label for="image">Image</label>
                        <input type="file" id="image" name="image" accept="image/*" required />
                    </div>
                    <div style="box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.3)" class="form-group">
                        <textarea class="form-control" name="description" cols="45" rows="5" placeholder="Tell us something about the content..."></textarea>
                    </div>
                    <div style="box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.3)" class="form-group">


                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">submit!</button>
                        </div>
                </form>
                </div>

                <a href="/hanks">back</a>
            </div>
        </div>
