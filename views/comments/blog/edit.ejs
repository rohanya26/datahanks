    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Web_Ed</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                        <li><a href="/login">login</a></li>
                        <li><a href="/register">signup</a></li>
                        <% } else { %>
                            <li>
                                <a href="#">Currently Logged in as <%=currentUser.username %></a>
                            </li>
                            <li><a href="/logout">logout</a></li>
                            <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div style="box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.3)" class="container">
        <div style="box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.3)" class="row">
            <h1 class="lll" style="text-align: center">Edit</h1>
            <div style="box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.3)" style="width: 30%; margin: 25px auto">
                <form action="/blogs/<%= blog._id  %>/comments/<%= comment._id  %>?_method=PUT  " method="post">
                    <div style="box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.3)" class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text%> " />
                    </div>

                    <div style="box-shadow: 10px 10px 50px rgba(0, 0, 0, 0.3)" class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">submit!</button>
                    </div>
                </form>
            </div>

            <a href="/blogs/<%= blog._id %> ">back</a>
        </div>
    </div>
</body>

