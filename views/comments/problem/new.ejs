    <script>
        tinymce.init({
            selector: '#mytextarea'
        });
    </script>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: sans-serif;
            background: linear-gradient(#ffffff, #d9e9bb);
        }
    </style>
</head>

<body>
